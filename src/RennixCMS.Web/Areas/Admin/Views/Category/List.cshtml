                handleAppend: function (id) {

                },
                loadCategoryTree: function () {
                    var me = this;
                    Vue.http.get(cms.urls.category.list)
                        .then((res) => {
                            var body = res.body;
                            if (body.success) {

                                var data = body.data;

                                var tree = cms.util.dataConvert.toTree(data);

                                for (var item of me.tree) { 
                                    delete item;
                                }

                                for (var item of tree) {
                                    var current = item;
                                    current.label = item.name;
                                    me.tree.push(current);
                                }
                            } else {
                                alert('加载出错' + body.error_message);
                            }
                        })
                        .catch((err) => {
                            alert('加载出错' + err.body.error_message);
                        });
                },
                createCategory: function (data) { 

