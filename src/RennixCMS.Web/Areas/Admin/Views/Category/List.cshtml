
@{
    ViewData["Title"] = "栏目列表";
    Layout = "~/Areas/Admin/Views/Shared/_Backstage.cshtml";
}

<div id="app">
    <div>
        <el-tree :data="tree"
                 node-key="id"
                 default-expand-all
                 :expand-on-click-node="false">
            <span class="custom-tree-node" slot-scope="{ node, data }">
                <span>{{ node.label }}</span>
                <span>
                    <el-button type="text"
                               size="mini"
                               @@click="handleAppend(node.id)">
                        添加子栏目
                    </el-button>
                    <el-button type="text"
                               size="mini"
                               @@click="handleRemove(node.id)">
                        删除栏目
                    </el-button>
                </span>
            </span>
        </el-tree>
    </div>
</div>

@section Scripts{ 
    <script>
        new Vue({
            el: '#app',
            data() {
                return {
                    tree: [],
                } 
            },
            methods: {
                handleRemove: function (id) { 

